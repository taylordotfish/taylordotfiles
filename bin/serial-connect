set -eu

DEFAULT_DEVICE=/dev/ttyUSB0

USAGE="\
Usage: $(basename "$0") [device [stty-option...]]

Default device: $DEFAULT_DEVICE
[stty-option...] configures the local TTY ($(tty)).
Press ^X to quit.
"

case "${1-}" in
    -h|--help)
        printf '%s' "$USAGE"
        exit
        ;;
esac

device=${1-$DEFAULT_DEVICE}
[ "$#" -gt 0 ] && shift

if ! ([ -r "$device" ] && [ -w "$device" ]); then
    echo >&2 "error: no read/write access for $device"
    exit 1
fi

stty_settings=$(stty -g)

cleanup() {
    trap - INT TERM
    stty "$stty_settings"
    if [ -n "${pid-}" ]; then
        kill "$pid" 2> /dev/null || true
        wait "$pid"
    fi
}

trap cleanup INT TERM EXIT

stty raw \
    intr ^X \
    quit undef \
    erase undef \
    kill undef \
    eof undef \
    eol undef \
    eol2 undef \
    swtch undef \
    start undef \
    stop undef \
    susp undef \
    rprnt undef \
    werase undef \
    lnext undef \
    discard undef \
    isig \
    -echo \
    "$@"

cat "$device" &
pid=$!
cat > "$device"
