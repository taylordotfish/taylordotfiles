set -euo pipefail

DEFAULT_DEVICE=/dev/ttyUSB0

USAGE=$(cat << EOF
Usage: $(basename "$0") [device [stty-option...]]

Default device: $DEFAULT_DEVICE
[stty-option...] configures the local TTY ($(tty)).
Press ^X to quit.
EOF
)

if [[ "${1:-}" =~ -h|--help ]]; then
    echo "$USAGE"
    exit
fi

device=${1:-$DEFAULT_DEVICE}

if ! ([ -r "$device" ] && [ -w "$device" ]); then
    echo >&2 "error: no read/write access for $device"
    exit 1
fi

stty_settings=$(stty -g)

cleanup() {
    trap - SIGTERM
    stty "$stty_settings"
    local jobs=$(jobs -pr)
    if [ -n "$jobs" ]; then
        kill $jobs
        wait $jobs
    fi
}

trap cleanup SIGINT SIGTERM EXIT

stty raw \
    intr ^X \
    quit undef \
    erase undef \
    kill undef \
    eof undef \
    eol undef \
    eol2 undef \
    swtch undef \
    start undef \
    stop undef \
    susp undef \
    rprnt undef \
    werase undef \
    lnext undef \
    discard undef \
    isig \
    -echo \
    "${@:2}"

cat "$device" &
cat > "$device"
