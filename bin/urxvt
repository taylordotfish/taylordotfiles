#!/bin/sh
# Copyright (C) 2023-2025 taylor.fish <contact@taylor.fish>
# License: GNU GPL version 3 or later
set -euf

dir=$(dirname "$0")
path=:$PATH:
case "$path" in
    *:$dir:*) path=${path%%:$dir:*}:${path#*:$dir:} ;;
esac
path=${path#:}
path=${path%:}
if ! urxvt=$(PATH=$path command -v urxvt); then
    printf >&2 '%s\n' 'error: missing urxvt'
    exit 1
fi

case "${URXVT_MONITOR-}" in
    "")
        monitor_field=1
        monitor_value=0
        ;;
    *:*)
        monitor_field=$(printf '%s\n' "$URXVT_MONITOR" | cut -d: -f1)
        monitor_value=$(printf '%s\n' "$URXVT_MONITOR" | cut -d: -f2-)
        ;;
    *)
        monitor_field=1
        monitor_value=$URXVT_MONITOR
        ;;
esac
unset URXVT_MONITOR

IFS='
'
properties=
for line in $(~/scripts/monitor-utils.sh monitors); do
    value=$(printf '%s\n' "$line" | cut -f"$monitor_field")
    [ "$value" = "$monitor_value" ] || continue
    properties=$(printf '%s\n' "$line" | cut -f8)
    break
done

prop_mono=
prop_hidpi=
case ",$properties," in
    *,mono,*) prop_mono=1 ;;
esac
case ",$properties," in
    *,hidpi,*) prop_hidpi=1 ;;
esac

args=
cmd=
unset name
unset title
state=
i=0

for arg do
    : $((i += 1))
    case "$state" in
        -name)
            name="$arg"
            state=
            continue
            ;;
        -title)
            title="$arg"
            state=
            continue
            ;;
        -e)
            cmd="$cmd \"\$$i\""
            continue
            ;;
    esac
    case "${arg-}" in
        -name|-title|-e)
            state="$arg"
            ;;
        *)
            args="$args \"\$$i\""
            ;;
    esac
done

[ -n "$cmd" ] || cmd=$(awk -vFS=: '
    BEGIN {
        uid = ARGV[2]
        ARGC = 2
    }

    $3 == uid {
        print $7
    }
' /etc/passwd "$(id -u)")
: ${cmd:=bash}

colors_sh=~/scripts/"set-urxvt-colors.sh"
if [ -n "$prop_mono" ]; then
    if command -v monoterm > /dev/null; then
        cmd="monoterm -b $cmd"
    fi
elif [ -z "${KEEPCOLORS-}" ] && [ -x "$colors_sh" ]; then
    cmd="\"\$colors_sh\" $cmd"
fi
unset KEEPCOLORS

hidpi_sh=~/scripts/hidpi.sh
if [ -n "$prop_hidpi" ] && [ -x "$hidpi_sh" ]; then
    cmd="\"\$hidpi_sh\" $cmd"
fi

if [ -z "${name+x}" ]; then
    name=Rxvt
    if [ -n "$prop_mono" ]; then
        name="$name.mono"
    fi
    if [ -n "$prop_hidpi" ]; then
        name="$name.2x"
    fi
fi

if [ -n "$prop_mono" ]; then
    export MONOCHROME=${MONOCHROME-1}
else
    unset MONOCHROME
fi

if [ -z "$prop_mono" ] && [ -n "$prop_hidpi" ]; then
    export HEAVY_BLOCKS=${HEAVY_BLOCKS-1}
fi

: ${title=urxvt}
eval "set -- $args -e $cmd"
exec "$urxvt" -name "$name" -title "$title" "$@"
