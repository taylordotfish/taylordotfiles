#!/bin/sh
xprofile_main() {
    xrdb ~/.Xresources -cpp m4
    xset s off
    xset s noblank
    xset dpms 65535 65535 65535
    xset -dpms
    xset b off
    xset fp default
    local d
    local fd
    for d in /usr/local/share/fonts/X11 ~/.local/share/fonts/X11; do
        for fd in "$d"/*; do
            [ -f "$fd/fonts.dir" ] && xset fp+ "$fd"
        done
    done
    local script
    for script in ~/scripts/{displays,controls}.sh; do
        [ -f "$script" ] && "$script"
    done
}
(set -eu; xprofile_main)
