#!/bin/sh
set -eu

. ~/scripts/monitor-utils.sh

image_1=/usr/share/desktop-base/emerald-theme/wallpaper/contents/images/1920x1080.svg

IFS='
'
for line in $(monitors); do
    index=$(printf '%s' "$line" | cut -f1)
    priority=$(printf '%s' "$line" | cut -f7)
    properties=$(printf '%s' "$line" | cut -f8)
    eval "image=\${image_$priority-\$image_1}"
    if printf '%s' "$properties" | grep '\bmono\b' > /dev/null; then
        [ -n "$image_mono" ] && image=$image_mono
    fi
    eval "mimage_$index=\$image"
done

args=
i=0
while true; do
    eval "mimage=\${mimage_$i-}"
    [ -z "$mimage" ] && break
    args="$args \"\$mimage_$i\""
    i=$((i+1))
done

eval "feh --no-fehbg --bg-fill $args"
